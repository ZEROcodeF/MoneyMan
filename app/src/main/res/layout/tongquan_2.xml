        android:layout_height="wrap_content"
        android:layout_margin="@dimen/scale_size_normal"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="HÃ´m nay"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey500"
            android:layout_marginTop="@dimen/scale_size_tiny"
            android:layout_marginBottom="@dimen/scale_size_normal"
            android:layout_marginLeft="@dimen/scale_size_big"
            android:layout_marginRight="@dimen/scale_size_big"
            />
